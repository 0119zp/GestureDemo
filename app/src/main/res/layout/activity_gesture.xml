<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lock_login_username_imag"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_imag"/>

    <TextView
        android:id="@+id/lock_login_username_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/lock_login_username_imag"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#222222"
        android:text="用户名:"/>

    <TextView
        android:id="@+id/lock_login_errornum_tv"
        android:layout_below="@id/lock_login_username_tv"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ff2244"
        android:textSize="12dp"
        android:text=""/>

    <RelativeLayout
        android:id="@+id/login_gestureLockView_rl"
        android:layout_below="@id/lock_login_errornum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <zp.com.gesturedemo.GestureLockView
            android:id="@+id/login_gestureLockView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
